<?xml version="1.0" encoding="UTF-8"?>
<configuration>


    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logg/svarUtSakImport.log</file>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date [%thread] %-5level %logger{25} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logg/old/svarUtSakImport.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>365</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="IMPORTLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logg/forsendelser.log</file>
    <encoder>
        <charset>UTF-8</charset>
        <pattern>%d{yyyy-MM-dd HH:mm:ss};%msg%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <fileNamePattern>logg/old/forsendelser.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        <maxHistory>365</maxHistory>
    </rollingPolicy>
    </appender>

    <logger name="forsendelser" level="INFO" additivity="false">
        <appender-ref ref="IMPORTLOG"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>